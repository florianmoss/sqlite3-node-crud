<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tournament</title>

    <%- include('layouts/cdn'); -%>
    <script src="/js/tournamentManagement.js"></script>
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/results.css" rel="stylesheet">
</head>

<body>
    <%- include('layouts/header'); -%>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Tournament Management</h1>
            <p class="lead">Tournament results might be pre-loaded. All results can be manually edited or randomized.
            </p>
        </div>
    </div>
    <table class="table table-borderless">
        <tbody>
            <% data.forEach(function(el) { %>
            <tr>
                <td class="align-middle">
                    <img src="<%= el.homeImage %>" width="200px" class="mx-auto d-block">
                </td>
                <td>
                    <div class="card text-center">
                        <div class="card-header">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        Home
                                    </div>
                                    <div class="col-sm">
                                        <strong>Game #<%= el.id %></strong>
                                    </div>
                                    <div class="col-sm">
                                        Away
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        <form action="/updateResults" method="POST">
                                            <span class="badge badge-pill resultPadding">
                                                <input type="number" id="homeValue<%= el.id %>" name="homeValue"
                                                    value="<%= el.homeResult %>" />
                                            </span>
                                    </div>
                                    <div class="col-sm">
                                        <div class="centerVs">
                                            <button type="submit" id="saveButton<%= el.id %>" class="btn btn-light">
                                                <span style="font-size: 1.5em; color: rgb(29, 143, 0);">
                                                    <i class="fas fa-save"></i>
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-sm">
                                        <span class="badge badge-pill resultPadding">
                                            <input type="number" id="awayValue<%= el.id %>" name="awayValue"
                                                value="<%= el.awayResult %>" />
                                        </span>
                                        <input type="hidden" name="num" value="<%= el.id %>" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        <%= el.home %>
                                    </div>
                                    <div class="col-sm">
                                        <button type="button" id="randomButton<%= el.id %>" class="btn btn-light">
                                            <span style="font-size: 1.5em; color: rgb(20, 36, 92);">
                                                <i class="fas fa-random"></i>
                                            </span>
                                        </button>
                                    </div>
                                    <div class="col-sm">
                                        <%= el.away %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td class="align-middle">
                    <img src="<%= el.awayImage %>" width="200px" class="mx-auto d-block">
                </td>
            </tr>
            <% }); %>

        </tbody>
    </table>
    <%- include('layouts/footer'); -%>
</body>

</html>

</html>